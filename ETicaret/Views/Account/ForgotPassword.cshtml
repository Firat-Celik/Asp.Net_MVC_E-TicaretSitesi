
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@{
    ViewBag.Title = "Şifremi Unuttum";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

            <form>
                <div class="panel panel-default">
                    <div class="panel-heading text-center" style="color:white; background-color:dodgerblue">
                        <h2>Şifremi Unuttum</h2>
                        <small style="color:red;">@ViewBag.MyError</small> <br />
                        <medium>Lütfen E-Posta Adresinizi Giriniz. </medium><br /> <br />
                        <span class="text-body" >&nbsp; &nbsp;İşleminizi Sağladıktan Sonra Posta Kutunuzu Kontrol Edip Şifreniz İle Giriş Yapabilirsiniz.&nbsp;</span>
                    </div>
                    <div class="panel-body">

                        <div class="form-group">
                            <input type="email" name="email" "email" placeholder="E-posta" class="form-control" />
                        </div>

                    </div>
                    <div class="panel-footer text-right" style="color:white; background-color:dodgerblue">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-send"></span> Gönder
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </div>

}